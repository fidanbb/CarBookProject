@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Update Address Information Entry</h4>
        <p class="card-subtitle mb-4">You can update information about the address field from the panel below. In order to preserve the integrity of the theme, please enter only 1 piece of data. If you have existing data, edit it. If you enter new data, delete the previous one.</p>
        <form method="post">
            <input type="hidden" asp-for="FooterAddressID" />
            <div class="form-group">
                <label for="exampleInputAddress">Address</label>
                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Please Enter Address">
            </div>
            <div class="form-group">
                <label for="exampleInputDescription">Description</label>
                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Please Enter Description">
            </div>
            <div class="form-group">
                <label for="exampleInputPhone">Phone</label>
                <input type="tel" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Please Enter Phone">
            </div>
            <div class="form-group">
                <label for="exampleInputMail">EMail</label>
                <input type="email" class="form-control" id="exampleInputMail" asp-for="Email" placeholder="Please Enter EMail">
            </div>
            <button type="submit" class="btn btn-success waves-effect waves-light">Update</button>
            <a href="/Admin/AdminFooterAddress/Index/" class="btn btn-danger waves-effect waves-light">Cancel</a>
        </form>
    </div>
</div>
