@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

                <div class="card">
                    <div class="card-body">
        <h4 class="card-title">New Blog Category Entry</h4>
        <p class="card-subtitle mb-4">You can enter data into the category field from the panel below.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Category Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Please Enter Category Name">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Category</button>
            <a href="/Admin/AdminCategory/Index/" class="btn btn-danger waves-effect waves-light">Cancel</a>
        </form>
                    </div>
                </div>
      