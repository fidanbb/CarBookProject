@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">About Us Data Update Area</h4>
        <p class="card-subtitle mb-4">
            You can edit the information in the "about" area of ​​the home page and the About Us page below. In order to preserve the integrity of the theme, please enter only 1 piece of data. Otherwise, the integrity of the theme will be damaged.
        </p>
        <form method="post">
            <input type="hidden" asp-for="AboutID" />
            <div class="form-group">
                <label for="exampleInputTitle">Title</label>
                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Please Enter Title ">
            </div>
            <div class="form-group">
                <label for="exampleInputDescription">Description</label>
                <textarea rows="5" asp-for="Description" class="form-control" placeholder=" Please Enter Description"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputimageUrl">Image Url</label>
                <input type="text" class="form-control" id="exampleInputimageUrl" asp-for="ImageUrl" placeholder="Please Enter Cover Image Url ">
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light">Update About</button>
            <a href="/Admin/AdminAbout/Index/" class="btn btn-danger waves-effect waves-light">Cancel</a>
        </form>
    </div>
</div>

