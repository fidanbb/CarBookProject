
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Leave a comment</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">
        <input type="hidden" value="@ViewBag.blogid" name="BlogID" />
        <div class="form-group">
            <label for="name">Name Surname</label>
            <input type="text" name="Name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email"name="Email" class="form-control" id="email">
        </div>


        <div class="form-group">
            <label for="message">Your Comment</label>
            <textarea name="Description" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>