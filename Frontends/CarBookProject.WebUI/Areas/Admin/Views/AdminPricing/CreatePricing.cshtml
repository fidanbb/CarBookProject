@model CreatePricingDto
@{
    ViewData["Title"] = "CreatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


                <div class="card">
                    <div class="card-body">
        <h4 class="card-title">New Payment Period Entry</h4>
        <p class="card-subtitle mb-4">You can enter data into the payment period field from the panel below.</p>
                        <form method="post">
                            <div class="form-group">
                <label for="exampleInputName">Payment Period Title</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter the Payment Period Name (Daily, Weekly, Monthly, etc.)">
                            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Payment</button>
            <a href="/Admin/AdminPricing/Index/" class="btn btn-danger waves-effect waves-light">Cancel</a>
                        </form>
                    </div>
                </div>
    
