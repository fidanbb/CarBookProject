@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title"> Blog Category Update</h4>
        <p class="card-subtitle mb-4">You can udpaet data into the category field from the panel below.</p>
        <form method="post">
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label for="exampleInputName">Category Name</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Please Enter Category Name">
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light">Update Category</button>
            <a href="/Admin/AdminCategory/Index/" class="btn btn-danger waves-effect waves-light">Cancel</a>
        </form>
    </div>
</div>
