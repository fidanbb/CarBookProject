<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


<script>
    $(document).ready(function () {
        $('#btn1').click(function () {
            swal("Terms & Conditions", "You can access all service conditions regarding the car rental process from the agreement documents in our offices where the reservation will be made physically. Details regarding the damage, fines, passes (hgs, ogs, etc.) of the whole process are included. We wish you a pleasant journey .");
        });

        $('#btn2').click(function () {
            swal("Security", "Our CarBook website has the infrastructure to keep the data completely encrypted with Sha256 encryption technique in AspNet Core technology. JWT verification is performed in our system. The card information that our users pay with is never stored in the system. Information such as TR ID Number, Email Address and phone number are encrypted. is kept.");
        });

        $('#btn3').click(function () {
            swal("Cookie Policy", "We use browser cookies to provide you with a better service.");
        });

        $('#btn4').click(function () {
            swal("Frequently Asked Questions", "Contains frequently asked questions about the system.");
        });

        $('#btn5').click(function () {
            swal("Payment Methods", "Payments are made only by card at the rental points in our physical locations.");
        });

        $('#btn6').click(function () {
            swal("How It Works", "Step 1 Rent Your Car\nStep 2 Check Your Email.\nStep 3 Come to our Office.");
        });
    });
</script>

