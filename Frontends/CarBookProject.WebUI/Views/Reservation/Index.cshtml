@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">

    <form class="bg-light p-5 contact-form" method="post">
        <br />
        <input type="hidden" asp-for="CarID" value="@ViewBag.v3" class="form-control" placeholder="The Car You Want to Buy">
        <div class="form-group">
            <input type="text" asp-for="Name" class="form-control" placeholder="Your Name">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Surname" class="form-control" placeholder="Your Surname">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Email" class="form-control" placeholder="Your Email">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Phone" class="form-control" placeholder="Your Phone Number">
        </div>
        <div class="form-group">
            <select class="form-control" asp-for="PickUpLocationID" asp-items="@ViewBag.Locations">
                <option disabled selected>Please Select Pickup Location</option>
            </select>
        </div>
        <div class="form-group">
            <select class="form-control" asp-for="DropOffLocationID" asp-items="@ViewBag.Locations">
                <option disabled selected>Please Select Delivery Location</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" asp-for="Age" class="form-control" placeholder="Your Age">
        </div>
        <div class="form-group">
            <input type="text" asp-for="DriverLicenseYear" class="form-control" placeholder="Your License Year">
        </div>
        <div class="form-group">
            <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Anything you would like to add ?"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Complete Your Reservation" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>

